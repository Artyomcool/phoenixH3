{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build DLL (MinGW i386)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-nostdlib",
                "-m32",
                "-O1",
                "-shared",
                "dll.cpp",
                "-o",
                "dll.dll",
                "'-Wl,--out-implib,libdll.dll.a'",
                "'-Wl,--dynamicbase'",
                "-fno-exceptions",
                "-fno-rtti",
                "-fno-unwind-tables",
                "-fno-asynchronous-unwind-tables",
                "-Wno-pointer-to-int-cast",
                "-Wno-int-to-pointer-cast",
                "overrides.cpp",
                "'-Wl,--wrap,_ZN2Os11loadLibraryEPKc'",
                "'-Wl,--wrap,_ZN2Os9getSymbolEPvPKc'",
                "C:/git/phoenixME/cldc/build/cygwin_i386/dist/lib/libcldc_vm.a",
                "-x",
                "c",
                "div.c",
                "-x",
                "c",
                "file.c",
                "-x",
                "c",
                "misc.c",
                "-x",
                "c",
                "kernel.c",
                "-Icldc/include",
            ],
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build Loader",
            "type": "shell",
            "command": "g++",
            "args": [
                "-nostdlib",
                "-m32",
                "-O3",
                "-shared",
                "dll_loader.cpp",
                "-o",
                "dll_loader.dll",
                "-fno-exceptions",
                "-fno-rtti",
                "-fno-unwind-tables",
                "-fno-asynchronous-unwind-tables",
                "-Wno-pointer-to-int-cast",
                "-Wno-int-to-pointer-cast",
            ],
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
            },
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}